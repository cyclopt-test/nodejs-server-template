{
	"name": "nodejs-server-template",
	"version": "0.0.0",
	"private": true,
	"description": "Not-so-opinionated server template, with all the important stuff",
	"keywords": [
		"nodejs",
		"template",
		"nodejs-template",
		"iamnapo",
		"eslint",
		"fastify",
		"graphql",
		"sentry",
		"nodemon",
		"ava",
		"dotenv"
	],
	"homepage": "https://github.com/iamnapo/nodejs-server-template#readme",
	"bugs": {
		"url": "https://github.com/iamnapo/nodejs-server-template/issues"
	},
	"repository": "github:iamnapo/nodejs-server-template",
	"license": "MIT",
	"author": {
		"name": "Napoleon-Christos Oikonomou",
		"email": "Napoleonoikon@gmail.com",
		"url": "https://iamnapo.me"
	},
	"type": "module",
	"exports": "./server.js",
	"scripts": {
		"ava": "c8 ava",
		"dev": "nodemon server.js",
		"lint": "eslint . --cache",
		"start": "cross-env NODE_ENV=production node server.js",
		"test": "npm run lint && npm run ava"
	},
	"nodemonConfig": {
		"env": {
			"NODE_ENV": "development",
			"NODE_OPTIONS": "--trace-warnings"
		},
		"watch": [
			"src",
			"server.js"
		]
	},
	"prettier": "@iamnapo/prettier-config",
	"eslintConfig": {
		"extends": "iamnapo",
		"rules": {
			"import/no-unresolved": "off"
		}
	},
	"ava": {
		"verbose": true
	},
	"dependencies": {
		"@sentry/node": "^6.19.3",
		"cross-env": "^7.0.3",
		"dotenv": "^16.0.0",
		"fastify": "^3.27.4",
		"fastify-compress": "^4.0.1",
		"fastify-cookie": "^5.6.0",
		"fastify-cors": "^6.0.3",
		"fastify-helmet": "^7.0.1",
		"fastify-plugin": "^3.0.1",
		"mercurius": "^9.3.6",
		"pino-pretty": "^7.6.0"
	},
	"devDependencies": {
		"@iamnapo/prettier-config": "^1.0.3",
		"ava": "^4.1.0",
		"c8": "^7.11.0",
		"eslint": "^8.12.0",
		"eslint-config-iamnapo": "^24.0.0",
		"file-type": "^17.1.1",
		"got": "^12.0.3",
		"nodemon": "^2.0.15"
	},
	"engines": {
		"node": ">=16"
	}
}
